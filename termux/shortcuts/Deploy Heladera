#!/data/data/com.termux/files/usr/bin/bash
# -*- coding: utf-8 -*-
# Shortcut para deployar app "heladera" via WiFi
# Usa caché de IPs para acelerar el descubrimiento

set -e
set -u

cd "$HOME/libre-gallinero"

# Cargar funciones comunes
source "$HOME/libre-gallinero/termux/common.sh"

print_banner "DEPLOY: HELADERA APP"

# Ejecutar deploy y capturar resultado
if python3 tools/deploy_app.py heladera; then
    pause_success
else
    pause_error "Deploy falló"
fi

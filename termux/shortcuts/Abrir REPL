#!/data/data/com.termux/files/usr/bin/bash
# -*- coding: utf-8 -*-
# Shortcut para abrir REPL interactivo del ESP8266
# Permite seleccionar app para usar IP cacheada

set -e
set -u

cd "$HOME/libre-gallinero"

# Cargar funciones comunes
source "$HOME/libre-gallinero/termux/common.sh"

print_banner "ABRIR WEBREPL REPL"

# Ejecutar REPL (es interactivo, no necesita manejo de errores especial)
python3 tools/open_repl.py

# Pausa al terminar
pause "Presiona Enter para cerrar..."

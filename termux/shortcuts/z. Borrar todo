#!/data/data/com.termux/files/usr/bin/bash
# -*- coding: utf-8 -*-
# Shortcut para limpiar archivos del ESP8266 vía WebREPL
# Permite eliminar archivos/directorios de forma interactiva

set -e
set -u

cd "$HOME/libre-gallinero"

# Cargar funciones comunes
source "$HOME/libre-gallinero/termux/common.sh"

print_banner "LIMPIEZA DE ESP8266"

# Ejecutar script de limpieza interactivo
if python3 tools/clean_esp8266.py; then
    pause_success
else
    pause_error "Limpieza falló"
fi



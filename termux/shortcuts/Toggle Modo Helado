#!/data/data/com.termux/files/usr/bin/bash
# -*- coding: utf-8 -*-
# Shortcut para alternar modo helado de la heladera
# Normal: 12/18 min, descanso nocturno
# Helado: 10/10 min, siempre activo

set -e
set -u

cd "$HOME/libre-gallinero"

# Cargar funciones comunes
source "$HOME/libre-gallinero/termux/common.sh"

print_banner "TOGGLE: MODO HELADO"

# Ejecutar toggle
if python3 tools/toggle_modo_helado.py; then
    pause_success
else
    pause_error "Toggle fall√≥"
fi
